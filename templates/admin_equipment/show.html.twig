{% extends 'base.html.twig' %}

{% block title %}Equipment{% endblock %}

{% block main_class %}main_container{% endblock %}

{% block main %}
    <div class="admin_zone">
        <h1>Equipment</h1>

        <a href="{{ path('app_admin_equipment_index') }}">back to list</a>
        <a href="{{ path('app_admin_equipment_edit', {'id': equipment.id}) }}">edit</a>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ equipment.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ equipment.description }}</td>
            </tr>
            <tr>
                <th>Utilisation</th>
                <td>{{ equipment.utilisation }}</td>
            </tr>
            <tr>
                <th>Optional goals</th>
                <td>{{ equipment.optionalGoals | join(' / ') }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_equipment_index') }}">back to list</a>
        <a href="{{ path('app_admin_equipment_edit', {'id': equipment.id}) }}">edit</a>

        {{ include('admin_equipment/_delete_form.html.twig') }}
    </div>
{% endblock %}
