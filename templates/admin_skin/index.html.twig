{% extends 'base.html.twig' %}

{% block title %}Skin index{% endblock %}

{% block main_class %}main_container{% endblock %}

{% block main %}
    {% include('partials/_adminSideMenu.html.twig') %}
    <div class="admin_zone">

        <h1>Skins index</h1>

        <div class="back_admin">
            <a href="{{ path('app_admin') }}">Back to ADMIN MENU</a>
        </div>

        <a href="{{ path('app_admin_skin_new') }}">Create new</a>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for skin in skins %}
                <tr>
                    <td>{{ skin.id }}</td>
                    <td>{{ skin.name }}</td>
                    <td>{{ skin.url }}</td>
                    <td>{{ skin.type }}</td>
                    <td>
                        <a href="{{ path('app_admin_skin_show', {'id': skin.id}) }}">show</a>
                        <a href="{{ path('app_admin_skin_edit', {'id': skin.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_skin_new') }}">Create new</a>

        <div class="back_admin">
            <a href="{{ path('app_admin') }}">Back to ADMIN MENU</a>
        </div>
    </div>
{% endblock %}
