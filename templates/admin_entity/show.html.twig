{% extends 'base.html.twig' %}

{% block title %}Entity{% endblock %}

{% block main_class %}main_container{% endblock %}

{% block main %}
    <div class="admin_zone">
        <h1>Entity</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>SpecialMove</th>
                <td>{{ entity.specialMove }}</td>
            </tr>
            <tr>
                <th>Evidences</th>
                <td>
                    <ul>{% for evidence in entity.evidences %}
                            <li>{{ evidence.name }}</li>
                        {% endfor %}
                    </ul>
                    {#                {{ entity.evidences | join(' / ') }} #}
                </td>
            </tr>
            <tr>
                <th>Characteristics</th>
                <td>
                    <ul>{% for characteristic in entity.characteristics %}
                            <li>
                                <a href="{{ path('app_admin_characteristic_show', {'id': characteristic.id}) }}">
                                    {{ characteristic.name }} : {{ characteristic.value }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                {#                <td>{{ entity.characteristics | join(' / ')}}</td> #}
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_entity_index') }}">back to list</a>

        <a href="{{ path('app_admin_entity_edit', {'id': entity.id}) }}">edit</a>

        {{ include('admin_entity/_delete_form.html.twig') }}
    </div>
{% endblock %}
