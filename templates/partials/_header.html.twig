<header>
    <nav class="navbar">
        <div class="nav-icon">
            <a
                    href="{{ path('app_home') }}"
                    {#                    class="nav-icon" #}
                    aria-label="Visit homepage"
                    aria-current="page"
            >
                <span>Phasmophobia: L'enquêteur</span><br>
                {% if app.user %}
                    <a href="{{ path('app_delete_account') }}"><span class="userName">{{ app.user.nickname }}</span></a>
                {% endif %}
            </a>
        </div>
        <div class="nav-links">
            <button
                    class="hamburger"
                    type="button"
                    aria-label="Toggle navigation"
                    aria-expanded="false"
            >
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="navlinks-container">
                {#                <a href="#" aria-current="page">Home</a> #}
                <a href="{{ path('app_home') }}"
                   class="{{ app.request.get('_route') == 'app_maps' ? 'active' : '' }}">
                    Maps
                </a>
                <a href="{{ path('app_home') }}"
                   class="{{ app.request.get('_route') == 'app_objects' ? 'active' : '' }}">
                    Objets
                </a>
                <a href="{{ path('app_home') }}"
                   class="{{ app.request.get('_route') == 'app_equipments' ? 'active' : '' }}">
                    Matos
                </a>
                <a href="{{ path('app_home') }}"
                   class="{{ app.request.get('_route') == 'app_evidences' ? 'active' : '' }}">
                    Preuves
                </a>
                <a href="{{ path('app_home') }}"
                   class="{{ app.request.get('_route') == 'app_entities' ? 'active' : '' }}">
                    Entitées
                </a>
                <a href="{{ path('app_home') }}"
                   class="{{ app.request.get('_route') == 'app_optionalGoals' ? 'active' : '' }}">
                    Objectifs
                </a>
                {% if (is_granted('ROLE_ADMIN')) %}
                    <a href="{{ path('app_admin') }}"
                       class="{{ app.request.get('_route') == 'app_admin' ? 'active' : '' }}">
                        Admin
                    </a>
                {% endif %}
            </div>
        </div>
        <div class="nav-authentication">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="user_sign_in" aria-label="Sign out">
                    <img src="{{ asset('/build/assets/pictos/user-solid.svg') }}" alt="user icon"/>
                </a>
                <div class="sign-btn">
                    <a href="{{ path('app_logout') }}" aria-label="Sign out">
                        <button type="button">Sign Out</button>
                    </a>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}" class="user_sign_in" aria-label="Sign in">
                    <img src="{{ asset('/build/assets/pictos/user-solid.svg') }}" alt="user icon"/>
                </a>
                <div class="sign-btn">
                    <a href="{{ path('app_login') }}" aria-label="Sign in">
                        <button type="button">Sign In</button>
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="go-btn">
            {% if(app.user) %}
                <a href="{{ path('app_investigation') }}">
                    <button>GO</button>
                </a>
            {% endif %}
        </div>
    </nav>
</header>